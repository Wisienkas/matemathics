<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PrimeFragment" >

    <TextView
        android:id="@+id/IsPrime_Fragment_IntroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="@string/introText" />

    <EditText
        android:id="@+id/IsPrime_Fragment_InputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IsPrime_Fragment_IntroText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="@string/InputField_Hint"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/IsPrime_Fragment_OutPutField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/IsPrime_Fragment_IntroText"
        android:layout_below="@+id/IsPrime_Fragment_calcBtn"
        android:layout_marginTop="48dp"
        android:text="@string/OutputField_Hint"
        android:ems="10" />

    <Button
        android:id="@+id/IsPrime_Fragment_calcBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IsPrime_Fragment_InputField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="@string/CalcBtn_Text" />

</RelativeLayout>